<Mechanism>
	<!--需要唯一ID，不一定是这个格式-->
	<ID>water_dispenser</ID>
	<Name>饮水机</Name>
	<!--是否阻碍玩家运动-->
	<IsBlock>true</IsBlock>
	<IsBlockLight>false</IsBlockLight>
	<LevelConfigs>
		<LevelConfig level = "1">
			<!--被加载到场景中的默认检测范围，具体的朝向可以在关卡的xml中旋转实现-->
			<DetectRange></DetectRange>
			<Action>
				<MoveLogic>0</MoveLogic>
				<RotateLogic>0</RotateLogic>
				<DetectLogic>0</DetectLogic>
			</Action>
			<Function type= "water">使周围八格洒水,在上面进行双倍移动</Function>
		</LevelConfig>
	</LevelConfigs>

</Mechanism>