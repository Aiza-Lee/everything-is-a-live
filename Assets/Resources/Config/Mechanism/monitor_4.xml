<Mechanism>
	<!--需要唯一ID，不一定是这个格式-->
	<ID>monitor_4</ID>
	<Name>监控d</Name>
	<!--是否阻碍玩家运动-->
	<IsBlock>false</IsBlock>
	<IsBlockLight>false</IsBlockLight>
	<LevelConfigs>
		<LevelConfig level = "1">
			<!--被加载到场景中的默认检测范围，具体的朝向可以在关卡的xml中旋转实现-->
			<DetectRange>
				<GridPosition x="0" y="1" />
				<GridPosition x="0" y="2" />
				<GridPosition x="-1" y="1" />
				<GridPosition x="-1" y="2" />
			</DetectRange>
			<Action>
				<MoveLogic>0</MoveLogic>
				<RotateLogic>0</RotateLogic>
				<DetectLogic>1</DetectLogic>
			</Action>
		</LevelConfig>
	</LevelConfigs>

</Mechanism>
<!-- 这个是第四关默认向右的监控 -->