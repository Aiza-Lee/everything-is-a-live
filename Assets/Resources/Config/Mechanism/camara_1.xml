<Mechanism>
	<!--需要唯一ID，不一定是这个格式-->
	<ID>camara_1</ID>
	<Name>固定摄影机a</Name>
	<!--是否阻碍玩家运动-->
	<IsBlock>true</IsBlock>
	<LevelConfigs>
		<LevelConfig level = "1">
			<!--被加载到场景中的默认检测范围，具体的朝向可以在关卡的xml中旋转实现-->
			<DetectRange>
				<GridPosition x="0" y="1" />
				<GridPosition x="0" y="2" />
			</DetectRange>
			<Action>
				<MoveLogic type="Loop">0</MoveLogic>
				<RotateLogic type="Loop">0</RotateLogic>
				<DetectLogic type="Loop">1</DetectLogic>
			</Action>
		</LevelConfig>
	</LevelConfigs>

</Mechanism>