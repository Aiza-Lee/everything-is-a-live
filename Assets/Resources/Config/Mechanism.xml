<Mechanism>
	<!--需要唯一ID，不一定是这个格式-->
	<ID>m_001</ID>
	<Name>摄像头</Name>
	<!--是否阻碍玩家运动-->
	<IsBlock>true</IsBlock>
	<IsBlockLight>false</IsBlockLight>
	<LevelConfigs>
		<LevelConfig level = "1">
			<!--被加载到场景中的默认检测范围，具体的朝向可以在关卡的xml中旋转实现-->
			<DetectRange>
				<GridPosition x="0" y="1" />
				<GridPosition x="0" y="2" />
			</DetectRange>
			<Action>
				<MoveLogic>L,L,R,R</MoveLogic>
				<RotateLogic>S,N,X,X</RotateLogic>
				<DetectLogic>1,0,1,0</DetectLogic>
			</Action>
		</LevelConfig>
		<LevelConfig level = "2">
			<!--被加载到场景中的默认检测范围，具体的朝向可以在关卡的xml中旋转实现-->
			<DetectRange>
				<GridPosition x="0" y="1" />
				<GridPosition x="0" y="2" />
				<GridPosition x="0" y="3" />
			</DetectRange>
			<Action>
				<MoveLogic>
					<!--相对出生点的矩形-->
					<GridPosition x="-1" y="1" />
					<GridPosition x="1" y="1" />
					<GridPosition x="1" y="-1" />
					<GridPosition x="-1" y="-1" />
				</MoveLogic>
				<RotateLogic>S,N,X,X</RotateLogic>
			</Action>
		</LevelConfig>
	</LevelConfigs>

</Mechanism>